<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.calculator.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefWidth="200.0" spacing="20.0">
         <children>
            <TextField fx:id="numberOne" />
            <TextField fx:id="numberTwo" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="buttonPlus" mnemonicParsing="false" onAction="#Plus" text="+" />
            <Button fx:id="buttonMinus" mnemonicParsing="false" onAction="#minus" text="-" />
            <Button fx:id="buttonMulti" mnemonicParsing="false" onAction="#Multi" text="*" />
            <Button fx:id="buttonDivision" mnemonicParsing="false" onAction="#division" text="/" />
            <Button fx:id="buttonRemain" mnemonicParsing="false" onAction="#remain" text="\%" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
         <children>
            <Label fx:id="resultLabel" />
         </children>
      </HBox>
   </children>
</VBox>
